{
  "extends": ["stylelint-config-recommended-scss", "stylelint-config-tailwindcss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "base",
          "components",
          "utilities"
        ]
      }
    ]
  },
  "customSyntax": "postcss-scss"
}
